{% extends 'base.html.twig' %}

{% block title %}edition de
	{{product.name}}
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row col-12">
			<h1 class="mt-5">Edition du produit :
				{{product.name}}</h1>

			{{form_start(formView)}}
			{{form_errors(formView)}}

			<div class=" col-8 mx-auto my-5">
				<div class="my-2">
					{{form_row(formView.name)}}</div>
				<div class="my-2">
					{{form_row(formView.price)}}</div>
				<div class="my-2">
					{{form_row(formView.quantity)}}</div>

				<a href="{{path('home')}}" class="btn btn-primary mt-3 mx-2">Retours a la liste des produits</a>

				<button type="submit" class="btn btn-warning mt-3">
					<i class="fas fa-save"></i>
					Modifier
				</button>
			</div>


			{{form_end(formView)}}
		</div>
	</div>

{% endblock %}
